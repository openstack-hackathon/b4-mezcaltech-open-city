<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.misael.example.test.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@mipmap/neto_dm"/>
        <TextView
            style="@style/TextUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toRightOf="@id/imgUser"
            android:layout_toEndOf="@id/imgUser"
            android:text="Neto DM"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:typeface="sans"
            android:textAllCaps="false"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:textSize="16dp"
            android:background="#eeeeee"
            android:text="@string/tag.send"/>

        <EditText
            android:id="@+id/editDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="start"
            android:gravity="left"
            android:hint="Detalles..."
            android:layout_marginBottom="130dp"
            android:layout_below="@id/imgUser"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/containerButtons">
        <ImageButton
            android:id="@+id/btnLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/map_marker"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnLocation"
            android:layout_toEndOf="@+id/btnLocation"
            android:orientation="vertical"
            android:layout_marginLeft="8dp">
            <RadioGroup
                android:id="@+id/containerRadioButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radioRobo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Robo" />
                <RadioButton
                    android:id="@+id/radioAsalto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asalto" />
                <RadioButton
                    android:id="@+id/radioAccidente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accidente"/>
            </RadioGroup>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/containerButtons"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#e0e0e0"
            android:layout_alignParentBottom="true">
            <ImageButton
                android:id="@+id/btnImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:src="@drawable/image"/>
            <ImageButton
                android:id="@+id/btnCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/camera_enhance"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
